{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "module": "NodeNext"
    }
  }
}
